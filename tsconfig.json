{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "jsx": "react-jsx",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "noEmit": true,
    },
    "include": ["src", "types.d.ts"],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}